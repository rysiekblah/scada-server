<?xml version="1.0" encoding="UTF-8"?>
<project name="Synapse Studio" default="all" basedir=".">
	<target name="all" depends="clean, compileServer, jar">
	</target>

	<property name="sourcedir" value="${basedir}/src" />
	<property name="builddir" value="${basedir}/build" />
	<property name="compileLibDir" value="${basedir}/lib" />
	<property name="distdir" value="${basedir}/dist" />
	<property name="coredir" value="../synapse-scada-core" />
	<property name="commonLibDir" value="../lib" />


	<path id="libraries">
		<fileset dir="${commonLibDir}">
			<include name="*.jar" />
		</fileset>
		<fileset dir="${coredir}/dist">
			<include name="*.jar" />
		</fileset>
	</path>


	<target name="clean">
		<delete dir="${builddir}" />
		<delete dir="${distdir}" />
		<delete file="build.log" />
		<delete file="MANIFEST.MF" />
	</target>


	<target name="compileServer">
		<delete dir="${builddir}" />
		<mkdir dir="${builddir}" />
		<javac srcdir="${sourcedir}" destdir="${builddir}" classpathref="libraries" debug="true" />
	</target>

	<target name="jar" depends="compileServer" >

		<property name="version.num" value="1.00" />
		<buildnumber file="build.num" />

		<tstamp>
			<format property="TODAY" pattern="yyyy-MM-dd HH:mm:ss" />
		</tstamp>

		<manifest file="MANIFEST.MF">
			<attribute name="Sealed" value="false" />
			<attribute name="Host-Name" value="${user.name}" />
			<attribute name="Built-By" value="Tomek Kozlowski (rysiekblah)" />
			<attribute name="Main-Class" value="com.synapse.scada.server.Service" />
			<attribute name="Class-Path" value="lib/log4j-1.2.16.jar ./lib/synapse_core-1.00.jar ./proxy/dummy_proxy.jar" />
			<attribute name="Implementation-Version" value="1" />
			<attribute name="Built-Date" value="${TODAY}" />
		</manifest>

		<jar jarfile="${distdir}/server.jar" basedir="${builddir}" manifest="MANIFEST.MF" />
	</target>


</project>


